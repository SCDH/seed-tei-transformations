    <x:scenario label="bible structured in chapters and verses">
        <x:context select="$tei-text" mode="html:html"/>
        <x:expect label="count of verses" test="count(//div[tokenize(@class) = 'verse'])" select="4"/>
        <x:expect label="vers numbers in attributes"
            test="//div[tokenize(@class) = 'verse']/@data-tei-n ! string(.)"
            select="('1','2','3','4')"/>
        <x:expect label="vers+chapter numbers in attributes"
            test="//div[tokenize(@class) = 'verse']/@data-chapter-verse ! string(.)"
            select="('1,1','1,2','1,3','1,4')"/>
    </x:scenario>

    <x:scenario label="apparatus in popups, regression for issue #74">
        <x:context select="$tei-text" mode="html:html"/>
        <x:expect label="has right count of apparatus entries in popup"
            test="count(//span[@class eq 'popup'])" select="8"/>
    </x:scenario>

    <x:scenario label="full html">
        <x:context select="$tei-text" mode="html:html"/>
        <x:expect label="result">
            <html lang="la" id="...">
                <head>...</head>
                <body>...</body>
            </html>
        </x:expect>
    </x:scenario>

