%% font package option
\newcommand*{\ergon@font}{ArabicTypesetting}
\DefineFamilyKey{ergon}{font}[ArabicTypesetting]{%
  \renewcommand*\ergon@font{#1}%
  \FamilyKeyStateProcessed}


%% font package option
\newcommand*{\ergon@fontsize}{16pt}
\DefineFamilyKey{ergon}{fontsize}[15pt]{%
  \renewcommand*\ergon@fontsize{#1}%
  \FamilyKeyStateProcessed}


%% font scaling option
\newcommand*{\ergon@fontscale}{1.4}
\DefineFamilyKey{ergon}{fontscale}[1.4]{%
  \renewcommand*\ergon@fontscale{#1}%
  \FamilyKeyStateProcessed}

